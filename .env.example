# ChiroFind Environment Variables
# Copy this file to .env and fill in the values

# Database (Supabase/PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/chirofind?schema=public"

# Supabase (optional, for auth and storage)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Stripe (for payments, Phase 2+)
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (for notifications, Phase 2+)
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@chirofind.com"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
